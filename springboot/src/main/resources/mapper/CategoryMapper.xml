<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mapper.CategoryMapper">

    <insert id="insert" parameterType="com.example.entity.Category">
        INSERT INTO category (name, content)
        VALUES (#{name}, #{content})
    </insert>

    <select id="selectAll" resultType="com.example.entity.Category">
        SELECT * FROM category
        <where>
            <if test="category.name != null and category.name != ''">
                AND name LIKE CONCAT('%', #{category.name}, '%')
            </if>
        </where>
        ORDER BY id DESC
    </select>

    <update id="updateById" parameterType="com.example.entity.Category">
        UPDATE category
        SET name = #{name},
        content = #{content}
        WHERE id = #{id}
    </update>

    <delete id="deleteById" parameterType="int">
        DELETE FROM category WHERE id = #{id}
    </delete>
</mapper>